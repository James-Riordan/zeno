FROM python:3.13.5

# Install system dependencies and pipenv
RUN apt-get update && apt-get install -y gcc && \
    pip install --upgrade pip pipenv

WORKDIR /app

# Copy Pipenv files first (for layer caching)
COPY Pipfile Pipfile.lock ./

# ðŸ‘‡ Install dependencies system-wide
RUN pipenv install --system --deploy

# Copy the source code
COPY . /app

EXPOSE 9000

# Optional: if running API directly, this is valid
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "9000", "--reload"]
